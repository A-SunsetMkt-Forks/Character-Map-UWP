<Page
    x:Class="CharacterMap.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:core="using:CharacterMap.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CharacterMap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    Loaded="MainPage_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Boolean x:Key="TrueValue">True</x:Boolean>
        <x:Boolean x:Key="FalseValue">False</x:Boolean>
        <core:AppSettings x:Key="AppSettings" />
        <CollectionViewSource
            x:Key="GroupedFontList"
            x:Name="GroupedFontList"
            IsSourceGrouped="True"
            Source="{Binding GroupedFontList}" />
    </Page.Resources>

    <Grid KeyDown="LayoutRoot_KeyDown" KeyUp="LayoutRoot_KeyUp">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Title Bar Grid  -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Height="{x:Bind CoreTitleBarHeight, Mode=OneWay}"
            Background="{StaticResource CMapUwpAcrylicBrush}">

            <Grid Padding="{x:Bind CoreTitleBarPadding, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ToggleButton
                    x:Uid="ToggleFullScreenModeButton"
                    Command="{Binding CommandToggleFullScreen}"
                    Style="{StaticResource IconToggleButtonStyle}">
                    <FontIcon FontSize="15" Glyph="&#xE740;" />
                </ToggleButton>
                <TextBlock
                    x:Name="TxtTitle"
                    x:Uid="TxtTitle"
                    Grid.Column="1"
                    Margin="7,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="#TxtTitle" />
                <Rectangle
                    x:Name="TitleBarBackgroundElement"
                    Grid.Column="1"
                    Fill="Transparent" />
            </Grid>
        </Grid>

        <!--  Commands Grid  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="{StaticResource CMapUwpAcrylicBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ToggleSwitch
                x:Uid="ToggleSymbolFontsOnly"
                Margin="12,0,0,3"
                VerticalAlignment="Bottom"
                FontSize="13"
                IsOn="{Binding ShowSymbolFontsOnly, Mode=TwoWay}" />
            <TextBlock
                Grid.Column="1"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiLight"
                Text="{Binding SelectedFont.Name, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
            <TextBox
                x:Name="SearchBoxUnicode"
                x:Uid="SearchBoxUnicode"
                Grid.Column="2"
                Width="290"
                VerticalAlignment="Center"
                PlaceholderText="#SearchBoxUnicode"
                Style="{StaticResource SearchTextBox}"
                TextChanged="SearchBoxUnicode_OnTextChanged" />
            <AppBarButton
                x:Name="BtnSettings"
                Grid.Column="3"
                Width="50"
                Height="50"
                Click="BtnSettings_OnClick">
                <FontIcon FontSize="15" Glyph="&#xE115;" />
            </AppBarButton>
        </Grid>

        <!--  Font List Grid  -->
        <SemanticZoom Grid.Row="2" Background="{StaticResource FontListBrush}">
            <SemanticZoom.ZoomedInView>
                <ListView
                    x:Name="LstFontFamily"
                    Margin="0"
                    Padding="0"
                    IsItemClickEnabled="False"
                    IsSwipeEnabled="False"
                    ItemContainerStyle="{ThemeResource ListViewItemRevealStyle}"
                    ItemsSource="{Binding Source={StaticResource GroupedFontList}}"
                    SelectedItem="{Binding SelectedFont, Mode=TwoWay}"
                    SelectedValuePath="Name"
                    SelectionMode="Single">

                    <ListView.GroupStyle>
                        <GroupStyle HeaderContainerStyle="{ThemeResource FontListHeaderItem}" HidesIfEmpty="True">
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <GridViewItem
                                        x:Name="Root"
                                        Margin="0"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        IsHitTestVisible="True"
                                        Style="{ThemeResource GridViewItemRevealStyle}">
                                        <TextBlock
                                            Padding="15,8,0,10"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            FontSize="28"
                                            FontWeight="SemiLight"
                                            Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                                            Text="{Binding Key}" />
                                    </GridViewItem>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="5"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedInView>

            <SemanticZoom.ZoomedOutView>
                <GridView
                    x:Name="ZoomGridView"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding CollectionGroups, Source={StaticResource GroupedFontList}}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="65" Height="65">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="32"
                                    FontWeight="SemiLight"
                                    Foreground="{Binding Group.Count, Converter={StaticResource ZoomBackgroundConverter}}"
                                    Text="{Binding Group.Key}" />
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SemanticZoom.ZoomedOutView>

        </SemanticZoom>

        <!--  Main UI Grid  -->
        <Grid Grid.Row="2" Grid.Column="1">

            <Grid.Resources>
                <Storyboard x:Name="BorderFadeInStoryboard">
                    <DoubleAnimationUsingKeyFrames
                        EnableDependentAnimation="True"
                        Storyboard.TargetName="BorderCopiedMessage"
                        Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                        <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="1" />
                        <LinearDoubleKeyFrame KeyTime="0:0:1.6" Value="1" />
                        <LinearDoubleKeyFrame KeyTime="0:0:2.2" Value="0" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </Grid.Resources>

            <!--  Char Grid  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="330" />
                </Grid.ColumnDefinitions>
                <GridView
                    x:Name="CharGrid"
                    Grid.Column="0"
                    Padding="10"
                    IsItemClickEnabled="False"
                    ItemContainerStyle="{ThemeResource GridViewItemRevealStyle}"
                    ItemsSource="{Binding Chars, Mode=OneWay}"
                    SelectedItem="{Binding SelectedChar, Mode=TwoWay}"
                    SelectionMode="Single">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="core:Character">
                            <Grid Style="{StaticResource CharItemGridStyle}">
                                <TextBlock
                                    x:Phase="1"
                                    FontFamily="{Binding ElementName=LstFontFamily, Path=SelectedItem, Converter={StaticResource InstalledFontToFontFamilyConverter}}"
                                    Style="{StaticResource CharItemCharStyle}"
                                    Text="{x:Bind Char}" />

                                <TextBlock
                                    x:Phase="2"
                                    Style="{StaticResource CharItemUnicodeStyle}"
                                    Text="{x:Bind UnicodeString}" />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!--  Column Grid Splitter  -->
                <controls:GridSplitter
                    Grid.Column="1"
                    Width="8"
                    Background="{StaticResource FontListBrush}"
                    CursorBehavior="ChangeOnSplitterHover"
                    GripperCursor="SizeWestEast"
                    GripperForeground="Transparent"
                    ResizeBehavior="BasedOnAlignment"
                    ResizeDirection="Columns" />

                <FontIcon
                    Grid.Column="1"
                    Margin="-6,0,0,0"
                    VerticalAlignment="Center"
                    Glyph="&#xE784;"
                    IsHitTestVisible="False" />

                <!--  Preview Grid  -->
                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="PreviewGrid" SizeChanged="PreviewGrid_SizeChanged">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Viewbox
                            MinHeight="200"
                            Margin="30"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Stretch="Uniform"
                            StretchDirection="Both">
                            <TextBlock
                                x:Name="TxtPreview"
                                FontFamily="{Binding ElementName=LstFontFamily, Path=SelectedItem, Converter={StaticResource InstalledFontToFontFamilyConverter}}"
                                Text="{Binding SelectedChar.Char}"
                                TextAlignment="Center" />
                        </Viewbox>

                        <Border
                            x:Name="BorderCopiedMessage"
                            Grid.Row="0"
                            Margin="15"
                            Padding="12"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                            Opacity="0">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon
                                    FontSize="21"
                                    Foreground="#ffffff"
                                    Glyph="&#xEC61;" />
                                <TextBlock
                                    x:Name="TxtCopiedMessage"
                                    x:Uid="TxtCopiedMessage"
                                    Margin="8,0,0,0"
                                    Foreground="#ffffff"
                                    Text="#TxtCopiedMessage" />
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Rectangle
                                Height="2"
                                Margin="15,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                                Opacity="0.15" />

                            <Button
                                Grid.Row="1"
                                Height="54"
                                Click="BtnCopy_OnClick"
                                Style="{ThemeResource TransparentButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xE16F;" />
                                    <TextBlock
                                        x:Uid="BtnCopy"
                                        Grid.Column="1"
                                        Margin="0,0,5,0"
                                        Text="#BtnCopy"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Button>

                            <CommandBar
                                x:Name="SaveAsCommandBar"
                                Grid.Row="2"
                                Grid.RowSpan="5"
                                Height="54"
                                VerticalAlignment="Top"
                                Style="{ThemeResource SaveAsPNGCommandBar}">
                                <CommandBar.SecondaryCommands>
                                    <AppBarButton
                                        Background="Transparent"
                                        Command="{Binding CommandSavePng}"
                                        CommandParameter="{StaticResource TrueValue}"
                                        Style="{ThemeResource TransparentButton}">
                                        <AppBarButton.Content>
                                            <TextBlock Margin="12,10" Text="Black text" />
                                        </AppBarButton.Content>
                                    </AppBarButton>
                                    <AppBarButton
                                        VerticalContentAlignment="Stretch"
                                        Background="Transparent"
                                        Command="{Binding CommandSavePng}"
                                        CommandParameter="{StaticResource FalseValue}"
                                        Style="{ThemeResource TransparentButton}">
                                        <AppBarButton.Content>
                                            <TextBlock Margin="12,10" Text="White text" />
                                        </AppBarButton.Content>
                                    </AppBarButton>
                                </CommandBar.SecondaryCommands>
                            </CommandBar>

                            <Button
                                Grid.Row="2"
                                Height="54"
                                Click="BtnSaveAs_OnClick"
                                Style="{ThemeResource TransparentButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xEB9F;" />
                                    <TextBlock
                                        x:Uid="BtnSavePng"
                                        Grid.Column="1"
                                        Margin="0,0,5,0"
                                        VerticalAlignment="Center"
                                        Text="#BtnSavePng"
                                        TextTrimming="CharacterEllipsis" />
                                    <FontIcon
                                        Grid.Column="2"
                                        FontSize="13"
                                        Glyph="&#xE972;" />
                                </Grid>
                            </Button>

                            <Rectangle
                                Grid.Row="3"
                                Height="2"
                                Margin="15,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                                Opacity="0.15" />

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <TextBox
                                    x:Name="TxtXamlCode"
                                    x:Uid="TxtXamlCode"
                                    Margin="0,15,0,0"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    GotFocus="TxtXamlCode_OnGotFocus"
                                    Header="#TxtXamlCode"
                                    IsReadOnly="True"
                                    Text="{Binding XamlCode}" />
                                <AppBarButton
                                    x:Name="BtnCopyXamlCode"
                                    Grid.Column="1"
                                    Width="50"
                                    Height="50"
                                    VerticalAlignment="Bottom"
                                    Click="BtnCopyXamlCode_OnClick">
                                    <FontIcon FontSize="16" Glyph="&#xE16F;" />
                                </AppBarButton>
                            </Grid>

                            <Grid Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <TextBox
                                    x:Name="TxtFontIcon"
                                    x:Uid="TxtFontIcon"
                                    Margin="0,7,0,0"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    GotFocus="TxtFontIcon_OnGotFocus"
                                    Header="#TxtFontIcon"
                                    IsReadOnly="True"
                                    Text="{Binding FontIcon}" />
                                <AppBarButton
                                    x:Name="BtnCopyFontIcon"
                                    Grid.Column="1"
                                    Width="50"
                                    Height="50"
                                    VerticalAlignment="Bottom"
                                    Click="BtnCopyFontIcon_OnClick">
                                    <FontIcon FontSize="16" Glyph="&#xE16F;" />
                                </AppBarButton>
                            </Grid>

                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <TextBox
                                    x:Name="TxtSymbolIcon"
                                    x:Uid="TxtSymbolIcon"
                                    Margin="0,7,0,0"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    GotFocus="TxtSymbolIcon_OnGotFocus"
                                    Header="#TxtSymbolIcon"
                                    IsReadOnly="True"
                                    Text="{Binding SymbolIcon}" />
                                <AppBarButton
                                    x:Name="BtnCopySymbolIcon"
                                    Grid.Column="1"
                                    Width="50"
                                    Height="50"
                                    VerticalAlignment="Bottom"
                                    Click="BtnCopySymbolIcon_OnClick">
                                    <FontIcon FontSize="16" Glyph="&#xE16F;" />
                                </AppBarButton>
                            </Grid>

                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!--  Status Bar  -->
        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Background="{StaticResource CMapUwpAcrylicBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <StackPanel Margin="12,0" Orientation="Horizontal">
                <TextBlock Text="Font Family Index: " />
                <TextBlock>&#160;</TextBlock>
                <TextBlock Text="{Binding SelectedFont.FamilyIndex}" />

                <Rectangle
                    Width="2"
                    Margin="15,6"
                    VerticalAlignment="Stretch"
                    Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                    Opacity="0.15" />

                <TextBlock Text="{Binding Chars.Count}" />
                <TextBlock Text=" Char(s)" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Margin="12,0"
                Orientation="Horizontal">
                <TextBlock Text="{Binding SelectedChar.UnicodeString}" />
            </StackPanel>
        </Grid>

        <!--  Settings ContentDialog  -->
        <ContentDialog
            x:Name="DigSettings"
            x:Uid="DigSettings"
            Title="#DigSettings"
            Grid.Row="0"
            Grid.RowSpan="3"
            IsPrimaryButtonEnabled="True"
            PrimaryButtonText="OK">
            <StackPanel Margin="0,10,0,0">
                <Slider
                    x:Name="sldResolution"
                    HorizontalAlignment="Stretch"
                    Header="PNG Resolution (pixel)"
                    IsThumbToolTipEnabled="True"
                    Maximum="2048"
                    Minimum="128"
                    StepFrequency="64"
                    TickFrequency="64"
                    TickPlacement="Outside"
                    Value="{Binding Source={StaticResource AppSettings}, Path=PngSize, Mode=TwoWay}" />
                <TextBlock Margin="0,0,0,20" Text="{Binding ElementName=sldResolution, Path=Value}" />

                <Slider
                    HorizontalAlignment="Stretch"
                    Header="Character Grid Size"
                    IsThumbToolTipEnabled="True"
                    Maximum="192"
                    Minimum="64"
                    StepFrequency="8"
                    TickFrequency="8"
                    TickPlacement="Outside"
                    Value="{Binding Source={StaticResource AppSettings}, Path=GridSize, Mode=TwoWay}" />
                <TextBlock
                    Margin="0,0,0,10"
                    Foreground="#666"
                    Text="Require Restart App to Take Effect."
                    TextWrapping="Wrap" />

                <Button
                    x:Name="BtnRestart"
                    Click="BtnRestart_OnClick"
                    Content="Restart Now"
                    Style="{StaticResource ButtonRevealStyle}" />

                <TextBlock
                    x:Uid="Settings_About"
                    Margin="0,40,0,10"
                    FontWeight="Bold"
                    Text="#Settings_About" />
                <TextBlock FontSize="14" Text="{Binding AppNameVersion}" />
                <TextBlock
                    x:Uid="Settings_AboutDescription"
                    FontSize="14"
                    Text="#Settings_AboutDescription"
                    TextWrapping="Wrap" />
                <HyperlinkButton Content="GitHub" NavigateUri="https://github.com/EdiWang/UWP-CharacterMap" />

                <HyperlinkButton Command="{Binding CommandFeedback}" Content="Feedback" />
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>