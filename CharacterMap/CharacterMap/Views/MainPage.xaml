<Page
    x:Class="CharacterMap.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls1="using:CharacterMap.Controls"
    xmlns:converters="using:CharacterMap.Converters"
    xmlns:core="using:CharacterMap.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CharacterMap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CharacterMap.ViewModels"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    Loaded="MainPage_Loaded"
    mc:Ignorable="d">

    <Page.Resources>

        <x:Boolean x:Key="TrueValue">True</x:Boolean>
        <x:Boolean x:Key="FalseValue">False</x:Boolean>
        <core:AppSettings x:Key="AppSettings" />
        <converters:SmartTextColorBasedOnAccentTypeConverter x:Key="SmartTextColorBasedOnAccentTypeConverter" />
        <CollectionViewSource
            x:Key="GroupedFontList"
            x:Name="GroupedFontList"
            IsSourceGrouped="True"
            Source="{Binding GroupedFontList}" />
    </Page.Resources>

    <Grid
        AllowDrop="True"
        DragOver="Grid_DragOver"
        Drop="Grid_Drop"
        KeyDown="LayoutRoot_KeyDown"
        KeyUp="LayoutRoot_KeyUp">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LoadingStates">
                <VisualState x:Name="FontsLoadingState">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{x:Bind ViewModel.IsLoadingFonts, Mode=OneWay}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FontsSemanticZoom.Visibility" Value="Collapsed" />
                        <Setter Target="MainUIGrid.Visibility" Value="Collapsed" />
                        <Setter Target="FontTitleBlock.Visibility" Value="Collapsed" />
                        <Setter Target="FontListFilter.IsEnabled" Value="False" />
                        <Setter Target="SearchBoxUnicode.IsEnabled" Value="False" />
                        <Setter Target="LoadingRing.IsActive" Value="True" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="FontsLoadedState" />
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--  Title Bar Grid  -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Height="{x:Bind CoreTitleBarHeight, Mode=OneWay}"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            RequestedTheme="{Binding IsDarkAccent, Converter={StaticResource SmartTextColorBasedOnAccentTypeConverter}, Mode=OneWay}">

            <Grid Padding="{x:Bind CoreTitleBarPadding, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ToggleButton
                    x:Uid="ToggleFullScreenModeButton"
                    Command="{Binding CommandToggleFullScreen}"
                    Style="{StaticResource IconToggleButtonStyle}">
                    <FontIcon FontSize="14" Glyph="&#xE740;" />
                </ToggleButton>
                <TextBlock
                    x:Name="TxtTitlePrefix"
                    Grid.Column="1"
                    Margin="7,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding TitlePrefix}" />
                <TextBlock
                    x:Name="TxtTitle"
                    x:Uid="TxtTitle"
                    Grid.Column="2"
                    Margin="7,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="#TxtTitle" />
                <Rectangle
                    x:Name="TitleBarBackgroundElement"
                    Grid.Column="2"
                    Fill="Transparent" />
            </Grid>
        </Grid>

        <!--  Commands Grid  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            RequestedTheme="{Binding IsDarkAccent, Converter={StaticResource SmartTextColorBasedOnAccentTypeConverter}, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                x:Name="FontListFilter"
                Width="160"
                Margin="0,0,0,3"
                VerticalAlignment="Bottom"
                FontSize="16"
                SelectedIndex="{Binding FontListFilter, Mode=TwoWay}">
                <ComboBoxItem Content="All Fonts" />
                <ComboBoxItem Content="Symbol Fonts" />
                <ComboBoxItem Content="Imported Fonts" />
                <!--<ComboBoxItem Content="Favorites" />-->
            </ComboBox>

            <!--<ToggleSwitch
                x:Name="ToggleSymbolFontsOnly"
                x:Uid="ToggleSymbolFontsOnly"

                IsOn="{Binding ShowSymbolFontsOnly, Mode=TwoWay}" />-->
            <TextBlock
                x:Name="FontTitleBlock"
                Grid.Column="1"
                Margin="10,0,5,0"
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="SemiLight"
                Text="{Binding SelectedFont.Name, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
            <TextBox
                x:Name="SearchBoxUnicode"
                x:Uid="SearchBoxUnicode"
                Grid.Column="2"
                Width="290"
                VerticalAlignment="Center"
                PlaceholderText="#SearchBoxUnicode"
                Style="{StaticResource SearchTextBox}"
                TextChanged="SearchBoxUnicode_OnTextChanged" />
            <AppBarButton
                x:Name="BtnSettings"
                Grid.Column="3"
                Width="45"
                Height="45"
                Click="BtnSettings_OnClick">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Glyph="&#xE115;" />
            </AppBarButton>
        </Grid>

        <!--  Font List Grid  -->
        <SemanticZoom
            x:Name="FontsSemanticZoom"
            Grid.Row="2"
            Grid.Column="0"
            Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
            <SemanticZoom.ZoomedInView>
                <ListView
                    x:Name="LstFontFamily"
                    IsItemClickEnabled="False"
                    IsSwipeEnabled="False"
                    ItemsSource="{Binding Source={StaticResource GroupedFontList}}"
                    SelectedItem="{Binding SelectedFont, Mode=TwoWay}"
                    SelectedValuePath="Name"
                    SelectionMode="Single">

                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.Resources>

                    <ListView.GroupStyle>
                        <GroupStyle HeaderContainerStyle="{ThemeResource FontListHeaderItem}" HidesIfEmpty="True">
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <GridViewItem
                                        x:Name="Root"
                                        Margin="0"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        IsHitTestVisible="True">
                                        <Border
                                            Margin="15,0"
                                            BorderBrush="#CCC"
                                            BorderThickness="0,0,0,1">
                                            <TextBlock
                                                Padding="0,8,0,10"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                FontSize="30"
                                                FontWeight="SemiLight"
                                                Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                                                Text="{Binding Key}" />
                                        </Border>
                                    </GridViewItem>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="core:InstalledFont">
                            <Grid ColumnSpacing="12" Background="Transparent">
                                <Grid.ContextFlyout>
                                    <MenuFlyout Opening="RemoveMenuFlyout_Opening">
                                        <MenuFlyoutItem
                                            Click="RemoveMenuFlyoutItem_Click"
                                            Tag="{x:Bind}"
                                            Text="Remove Font" />
                                    </MenuFlyout>
                                </Grid.ContextFlyout>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Opacity="0.5"
                                    Text="{x:Bind Variants.Count}"
                                    Visibility="{x:Bind HasVariants}" />
                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <GridView
                    x:Name="ZoomGridView"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding CollectionGroups, Source={StaticResource GroupedFontList}}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="64" Height="64">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="32"
                                    FontWeight="SemiLight"
                                    Foreground="{Binding Group.Count, Converter={StaticResource ZoomBackgroundConverter}}"
                                    Text="{Binding Group.Key}" />
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>

        <!--  Main UI Grid  -->
        <Grid
            x:Name="MainUIGrid"
            Grid.Row="2"
            Grid.Column="1">
            <Grid.Resources>
                <Storyboard x:Name="BorderFadeInStoryboard">
                    <DoubleAnimationUsingKeyFrames
                        EnableDependentAnimation="True"
                        Storyboard.TargetName="BorderCopiedMessage"
                        Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                        <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="1" />
                        <LinearDoubleKeyFrame KeyTime="0:0:1.6" Value="1" />
                        <LinearDoubleKeyFrame KeyTime="0:0:2.2" Value="0" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </Grid.Resources>

            <!--  Char Grid  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="330" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Margin="12"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Spacing="24">
                    <ComboBox
                        x:Name="WeightSelector"
                        x:Uid="WeightSelector"
                        MinWidth="160"
                        IsEnabled="{Binding SelectedFont.HasVariants}"
                        ItemsSource="{Binding SelectedFont.Variants}"
                        SelectedItem="{Binding SelectedVariant, Mode=TwoWay}" />
                    <ToggleSwitch
                        x:Name="ColorGlyphToggle"
                        x:Uid="ColorGlyphToggle"
                        VerticalAlignment="Bottom"
                        IsOn="{Binding ShowColorGlyphs, Mode=TwoWay}" />

                    <Button
                        Width="44"
                        Height="44"
                        Margin="0 0 0 -8"
                        VerticalAlignment="Bottom"
                        Style="{ThemeResource TransparentButton}"
                        ToolTipService.ToolTip="Font Face Properties">
                        <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xE946;" />
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel
                                    Width="300"
                                    Padding="12"
                                    Spacing="12">
                                    <TextBlock x:Uid="FontPropTitle" FontWeight="Bold" />
                                    <Grid RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Opacity" Value="0.5" />
                                            </Style>
                                            <Style x:Key="Value" TargetType="TextBlock">
                                                <Setter Property="Opacity" Value="1" />
                                                <Setter Property="Grid.Column" Value="1" />
                                            </Style>
                                        </Grid.Resources>

                                        <TextBlock x:Uid="FontPropFamily" Grid.Row="0" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedFont.Name}" />

                                        <TextBlock x:Uid="FontPropFace" Grid.Row="1" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.PreferredName}" />

                                        <TextBlock x:Uid="FontPropType" Grid.Row="2" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.FontFace.FileFormatType}" />

                                        <TextBlock x:Uid="FontPropSymbol" Grid.Row="3" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.FontFace.IsSymbolFont}" />

                                        <TextBlock x:Uid="FontPropMonospaced" Grid.Row="4" />
                                        <TextBlock
                                            Grid.Row="4"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.FontFace.IsMonospaced}" />

                                        <TextBlock x:Uid="FontPropStyle" Grid.Row="5" />
                                        <TextBlock
                                            Grid.Row="5"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.FontFace.Style}" />

                                        <TextBlock x:Uid="FontPropStretch" Grid.Row="6" />
                                        <TextBlock
                                            Grid.Row="6"
                                            Style="{StaticResource Value}"
                                            Text="{Binding SelectedVariant.FontFace.Stretch}" />

                                        <TextBlock x:Uid="FontPropWeight" Grid.Row="7" />
                                        <TextBlock
                                            Grid.Row="7"
                                            Style="{StaticResource Value}"
                                            Text="{x:Bind ViewModel.SelectedVariant.FontFace.Weight.Weight.ToString(), Mode=OneWay}" />

                                    </Grid>
                                </StackPanel>

                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <GridView
                    x:Name="CharGrid"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="10"
                    IsItemClickEnabled="False"
                    ItemsSource="{Binding Chars, Mode=OneWay}"
                    SelectedItem="{Binding SelectedChar, Mode=TwoWay}"
                    SelectionMode="Single"
                    ShowsScrollingPlaceholders="False">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="core:Character">
                            <Grid Style="{StaticResource CharItemGridStyle}">
                                <TextBlock
                                    FontFamily="{Binding ElementName=WeightSelector, Path=SelectedItem.XamlFontFamily}"
                                    FontStretch="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Stretch}"
                                    FontStyle="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Style}"
                                    FontWeight="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Weight}"
                                    IsColorFontEnabled="{Binding ElementName=ColorGlyphToggle, Path=IsOn}"
                                    Style="{StaticResource CharItemCharStyle}"
                                    Text="{x:Bind Char}" />

                                <TextBlock Style="{StaticResource CharItemUnicodeStyle}" Text="{x:Bind UnicodeString}" />

                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!--  Column Grid Splitter  -->
                <controls:GridSplitter
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Width="8"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                    CursorBehavior="ChangeOnSplitterHover"
                    GripperCursor="SizeWestEast"
                    GripperForeground="Transparent"
                    ResizeBehavior="BasedOnAlignment"
                    ResizeDirection="Columns" />

                <FontIcon
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="-6,0,0,0"
                    VerticalAlignment="Center"
                    Glyph="&#xE784;"
                    IsHitTestVisible="False" />

                <!--  Preview Grid  -->
                <Grid
                    x:Name="PreviewGrid"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    SizeChanged="PreviewGrid_SizeChanged">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Viewbox
                        MinHeight="200"
                        Margin="30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Stretch="Uniform"
                        StretchDirection="Both">
                        <TextBlock
                            x:Name="TxtPreview"
                            FontFamily="{Binding ElementName=WeightSelector, Path=SelectedItem.XamlFontFamily}"
                            FontStretch="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Stretch}"
                            FontStyle="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Style}"
                            FontWeight="{Binding ElementName=WeightSelector, Path=SelectedItem.FontFace.Weight}"
                            IsColorFontEnabled="{Binding ElementName=ColorGlyphToggle, Path=IsOn}"
                            Text="{Binding SelectedChar.Char}"
                            TextAlignment="Center" />
                    </Viewbox>

                    <Border
                        x:Name="BorderCopiedMessage"
                        Grid.Row="0"
                        Margin="15"
                        Padding="12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                        Opacity="0">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                FontSize="21"
                                Foreground="White"
                                Glyph="&#xEC61;" />
                            <TextBlock
                                x:Name="TxtCopiedMessage"
                                x:Uid="TxtCopiedMessage"
                                Margin="8,0,0,0"
                                Foreground="White"
                                Text="#TxtCopiedMessage" />
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Rectangle
                            Height="2"
                            Margin="15,0"
                            HorizontalAlignment="Stretch"
                            Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                            Opacity="0.15" />

                        <Button
                            Grid.Row="1"
                            Height="54"
                            Click="BtnCopy_OnClick"
                            Style="{ThemeResource TransparentButton}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xE16F;" />
                                <TextBlock
                                    x:Uid="BtnCopy"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    Text="#BtnCopy"
                                    TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </Button>

                        <CommandBar
                            x:Name="SaveAsCommandBar"
                            Grid.Row="2"
                            Grid.RowSpan="6"
                            Height="54"
                            VerticalAlignment="Top"
                            Style="{ThemeResource SaveAsPNGCommandBar}">
                            <CommandBar.SecondaryCommands>
                                <AppBarButton
                                    Background="Transparent"
                                    Command="{Binding CommandSavePng}"
                                    CommandParameter="{x:Bind ViewModel.GlyphColor}"
                                    Style="{ThemeResource TransparentButton}"
                                    Visibility="{x:Bind ViewModel.SelectedCharAnalysis.HasColorGlyphs, Mode=OneWay}">
                                    <AppBarButton.Content>
                                        <TextBlock Margin="12,10" Text="Colored Glyph" />
                                    </AppBarButton.Content>
                                </AppBarButton>
                                <AppBarButton
                                    Background="Transparent"
                                    Command="{Binding CommandSavePng}"
                                    CommandParameter="{x:Bind ViewModel.BlackColor}"
                                    Style="{ThemeResource TransparentButton}"
                                    Visibility="{x:Bind core:Converters.FalseToVis(ViewModel.SelectedCharAnalysis.ContainsBitmapGlyphs), Mode=OneWay}">
                                    <AppBarButton.Content>
                                        <TextBlock x:Uid="BlackFill" Margin="12,10" />
                                    </AppBarButton.Content>
                                </AppBarButton>
                                <AppBarButton
                                    VerticalContentAlignment="Stretch"
                                    Background="Transparent"
                                    Command="{Binding CommandSavePng}"
                                    CommandParameter="{x:Bind ViewModel.WhiteColor}"
                                    Style="{ThemeResource TransparentButton}"
                                    Visibility="{x:Bind core:Converters.FalseToVis(ViewModel.SelectedCharAnalysis.ContainsBitmapGlyphs), Mode=OneWay}">
                                    <AppBarButton.Content>
                                        <TextBlock x:Uid="WhiteFill" Margin="12,10" />
                                    </AppBarButton.Content>
                                </AppBarButton>
                            </CommandBar.SecondaryCommands>
                        </CommandBar>

                        <Button
                            Grid.Row="2"
                            Height="54"
                            Click="BtnSaveAs_OnClick"
                            Style="{ThemeResource TransparentButton}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xEB9F;" />
                                <TextBlock
                                    x:Uid="BtnSavePng"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="#BtnSavePng"
                                    TextTrimming="CharacterEllipsis" />
                                <FontIcon
                                    Grid.Column="2"
                                    FontSize="13"
                                    Glyph="&#xE972;" />
                            </Grid>
                        </Button>

                        <CommandBar
                            x:Name="SaveAsSvgCommandBar"
                            Grid.Row="3"
                            Grid.RowSpan="6"
                            Height="54"
                            VerticalAlignment="Top"
                            Style="{ThemeResource SaveAsPNGCommandBar}">
                            <CommandBar.SecondaryCommands>
                                <AppBarButton
                                    Background="Transparent"
                                    Command="{Binding CommandSaveSvg}"
                                    CommandParameter="{StaticResource TrueValue}"
                                    Style="{ThemeResource TransparentButton}">
                                    <AppBarButton.Content>
                                        <TextBlock x:Uid="BlackFill" Margin="12,10" />
                                    </AppBarButton.Content>
                                </AppBarButton>
                                <AppBarButton
                                    VerticalContentAlignment="Stretch"
                                    Background="Transparent"
                                    Command="{Binding CommandSaveSvg}"
                                    CommandParameter="{StaticResource FalseValue}"
                                    Style="{ThemeResource TransparentButton}">
                                    <AppBarButton.Content>
                                        <TextBlock x:Uid="WhiteFill" Margin="12,10" />
                                    </AppBarButton.Content>
                                </AppBarButton>
                            </CommandBar.SecondaryCommands>
                        </CommandBar>

                        <Button
                            Grid.Row="3"
                            Height="54"
                            Click="BtnSaveAsSvg_OnClick"
                            IsEnabled="{Binding SelectedCharAnalysis.IsFullVectorBased, Mode=OneWay}"
                            Style="{ThemeResource TransparentButton}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <FontIcon Foreground="{ThemeResource SystemControlForegroundAccentBrush}" Glyph="&#xEB9F;" />
                                <TextBlock
                                    x:Uid="BtnSaveSvg"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="#BtnSaveSvg"
                                    TextTrimming="CharacterEllipsis" />
                                <FontIcon
                                    Grid.Column="2"
                                    FontSize="13"
                                    Glyph="&#xE972;" />
                            </Grid>
                        </Button>

                        <Rectangle
                            Grid.Row="5"
                            Height="2"
                            Margin="15,0"
                            HorizontalAlignment="Stretch"
                            Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                            Opacity="0.15" />

                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TxtXamlCode"
                                x:Uid="TxtXamlCode"
                                Margin="0,15,0,0"
                                FontFamily="Consolas"
                                FontSize="14"
                                GotFocus="TxtXamlCode_OnGotFocus"
                                Header="#TxtXamlCode"
                                IsReadOnly="True"
                                Text="{Binding XamlCode}" />
                            <AppBarButton
                                x:Name="BtnCopyXamlCode"
                                Grid.Column="1"
                                Width="50"
                                Height="50"
                                VerticalAlignment="Bottom"
                                Click="BtnCopyXamlCode_OnClick">
                                <FontIcon FontSize="16" Glyph="&#xE16F;" />
                            </AppBarButton>
                        </Grid>

                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TxtFontIcon"
                                x:Uid="TxtFontIcon"
                                Margin="0,7,0,0"
                                FontFamily="Consolas"
                                FontSize="14"
                                GotFocus="TxtFontIcon_OnGotFocus"
                                Header="#TxtFontIcon"
                                IsReadOnly="True"
                                Text="{Binding FontIcon}" />
                            <AppBarButton
                                x:Name="BtnCopyFontIcon"
                                Grid.Column="1"
                                Width="50"
                                Height="50"
                                VerticalAlignment="Bottom"
                                Click="BtnCopyFontIcon_OnClick">
                                <FontIcon FontSize="16" Glyph="&#xE16F;" />
                            </AppBarButton>
                        </Grid>

                        <Grid Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TxtSymbolIcon"
                                x:Uid="TxtSymbolIcon"
                                Margin="0,7,0,0"
                                FontFamily="Consolas"
                                FontSize="14"
                                GotFocus="TxtSymbolIcon_OnGotFocus"
                                Header="#TxtSymbolIcon"
                                IsReadOnly="True"
                                Text="{Binding SymbolIcon}" />
                            <AppBarButton
                                x:Name="BtnCopySymbolIcon"
                                Grid.Column="1"
                                Width="50"
                                Height="50"
                                VerticalAlignment="Bottom"
                                Click="BtnCopySymbolIcon_OnClick">
                                <FontIcon FontSize="16" Glyph="&#xE16F;" />
                            </AppBarButton>
                        </Grid>

                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!--  Loading Root  -->
        <ProgressRing
            x:Name="LoadingRing"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Width="50"
            Height="50" />

        <!--  Status Bar  -->
        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            RequestedTheme="{Binding IsDarkAccent, Converter={StaticResource SmartTextColorBasedOnAccentTypeConverter}, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <StackPanel Margin="12,0" Orientation="Horizontal">
                <TextBlock Text="Font Family Index: " />
                <TextBlock>&#160;</TextBlock>
                <TextBlock Text="{Binding GlyphHasColorVariant}" />

                <Rectangle
                    Width="2"
                    Margin="15,6"
                    VerticalAlignment="Stretch"
                    Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                    Opacity="0.15" />

                <TextBlock Text="{Binding Chars.Count}" />
                <TextBlock Text=" Char(s)" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Margin="12,0"
                Orientation="Horizontal">
                <TextBlock Text="{Binding SelectedChar.UnicodeString}" />
            </StackPanel>
        </Grid>

        <!--  Settings ContentDialog  -->
        <ContentDialog
            x:Name="DigSettings"
            x:Uid="DigSettings"
            Title="#DigSettings"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            d:IsHidden="True"
            IsPrimaryButtonEnabled="True"
            PrimaryButtonText="OK">
            <StackPanel Margin="0,10,0,0">
                <Slider
                    x:Name="SldResolution"
                    HorizontalAlignment="Stretch"
                    Header="PNG Resolution (pixel)"
                    IsThumbToolTipEnabled="True"
                    Maximum="2048"
                    Minimum="128"
                    StepFrequency="64"
                    TickFrequency="64"
                    TickPlacement="Outside"
                    Value="{Binding Source={StaticResource AppSettings}, Path=PngSize, Mode=TwoWay}" />
                <TextBlock Margin="0,0,0,20" Text="{Binding ElementName=SldResolution, Path=Value}" />

                <Slider
                    HorizontalAlignment="Stretch"
                    Header="Character Grid Size"
                    IsThumbToolTipEnabled="True"
                    Maximum="192"
                    Minimum="64"
                    StepFrequency="8"
                    TickFrequency="8"
                    TickPlacement="Outside"
                    Value="{Binding Source={StaticResource AppSettings}, Path=GridSize, Mode=TwoWay}" />
                <TextBlock
                    Margin="0,0,0,10"
                    Foreground="#666"
                    Text="Require Restart App to Take Effect."
                    TextWrapping="Wrap" />

                <Button
                    x:Name="BtnRestart"
                    Click="BtnRestart_OnClick"
                    Content="Restart Now" />

                <TextBlock
                    x:Uid="Settings_About"
                    Margin="0,40,0,10"
                    FontWeight="Bold"
                    Text="#Settings_About" />
                <TextBlock FontSize="14" Text="{Binding AppNameVersion}" />
                <TextBlock
                    x:Uid="Settings_AboutDescription"
                    FontSize="14"
                    Text="#Settings_AboutDescription"
                    TextWrapping="Wrap" />
                <HyperlinkButton Content="GitHub" NavigateUri="https://github.com/EdiWang/UWP-CharacterMap" />
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>