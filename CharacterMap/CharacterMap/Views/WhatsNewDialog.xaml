<ContentDialog 
    x:Class="CharacterMap.Views.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="345"
    d:DesignWidth="550"
    PrimaryButtonText="OK">
    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <TextBlock x:Uid="AfterUpdate_Title" Text="#AfterUpdate_Title" />
        </DataTemplate>
    </ContentDialog.TitleTemplate>
    <ScrollViewer>
        <StackPanel>
            <TextBlock x:Uid="AfterUpdate_Body" TextWrapping="WrapWholeWords">
                Expand Unicode range to include more characters in certain fonts
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
